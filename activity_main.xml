<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label_ultrasonic"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/jarak"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_ldr" />

    <TextView
        android:id="@+id/label_led1button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:text="@string/lampu_1"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_ultrasonic" />

    <TextView
        android:id="@+id/label_led2button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/lampu_2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_led1button" />

    <TextView
        android:id="@+id/label_pirSensor"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:text="@string/status_pir"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_valueLdr"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_ldr"
        app:layout_constraintTop_toBottomOf="@+id/txtView_valuePirSensor" />

    <TextView
        android:id="@+id/txtView_valueUltrasonik"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_ultrasonic"
        app:layout_constraintTop_toBottomOf="@+id/txtView_valueLdr" />

    <TextView
        android:id="@+id/label_ldr"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/nilai_ldr"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_pirSensor" />

    <TextView
        android:id="@+id/txtView_valuePirSensor"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/label_pirSensor"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton_lampu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/label_led1button"
        app:layout_constraintTop_toBottomOf="@+id/txtView_valueUltrasonik" />

    <ToggleButton
        android:id="@+id/toggleButton_lampu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/label_led2button"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton_lampu1" />

</androidx.constraintlayout.widget.ConstraintLayout>